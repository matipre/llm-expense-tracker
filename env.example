# Environment Variables for Local Development
# Copy this to .env for local development

# API Keys (set these in Railway Dashboard for production)
OPENAI_API_KEY=sk-your_openai_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Settings
# Set to 'true' to enable polling (for development). In production use webhooks (default: false)
TELEGRAM_POLLING_ENABLED=true

# Database Options:
# For local development (using docker-compose):
DATABASE_URL=postgresql://expensio_user:expensio_password@localhost:5432/expensio

# For production (using Supabase):
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# Message Queue (RabbitMQ)
RABBITMQ_URL=amqp://expensio_user:expensio_password@localhost:5672

# Optional: Override defaults
ENVIRONMENT=development
LOG_LEVEL=DEBUG