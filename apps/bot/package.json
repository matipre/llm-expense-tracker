{
  "name": "@darwin-challenge/bot",
  "version": "1.0.0",
  "description": "Python Bot Service for Telegram Expense Tracking",
  "scripts": {
    "build": "echo 'No build step required for Python service'",
    "dev": "cd src && python3 -m uvicorn main:app --reload --host 0.0.0.0 --port 3002",
    "start": "cd src && python3 -m uvicorn main:app --host 0.0.0.0 --port 3002",
    "test": "python3 -m pytest",
    "install:py": "python3 -m pip install -r requirements.txt",
    "dev:with-env": "cd src && python3 -c \"import os; exec(open('../../.env').read().replace('export ', 'os.environ['')); exec(open('main.py').read())\""
  },
  "devDependencies": {}
}
